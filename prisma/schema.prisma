// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Customer {
  parentId      String @id
  forvalId      String?
  syshanId      String?
  billingCode   String?
  customerName1 String?
  customerName2 String?
  honorific     String?
  address1      String?
  address2      String?
  telephone     String?
  postcode      String?
  created       DateTime? @default(now())
  updated       DateTime? @updatedAt
}

model Contract {
  supplyNumber       String  @id
  childId            String?
  syshanId           String?
  supplyName         String?
  supplyAdress       String?
  contractorName     String?
  contractDetails    String?
  contractCurrent    String?
  paymentMethod      String?
  created            DateTime? @default(now())
  updated            DateTime? @updatedAt
  BillinStatement    BillinStatement[]
}

model BillinStatement {
  id                           Int       @id @default(autoincrement())
  forvalId                     String
  syshanId                     String
  fitId                        String?
  supplyNumber                 Contract  @relation(fields: [supplyNumberId], references: [supplyNumber])
  supplyNumberId               String
  userName                     String?
  status                       Int?
  paymentMonth                 Int?
  useMonth                     Int?
  startDay                     Int?
  endDay                       Int?
  chargeItemCode               String?
  useAmount                    Int?
  totalAmount                  Int?
  government                   Int?
  tax                          Int?
  CO2Discharge                 String?
  parentId                     String?
  childId                      String?
  created                      DateTime? @default(now())
  updated                      DateTime? @updatedAt
}

model Merchandise {
  chargeItemCode  String  @id
  productCode     String?
  productName     String?
  unit            String?
  unitPrice       Int?
  taxRate         Int?
  position        Int?
  created         DateTime? @default(now())
  updated         DateTime? @updatedAt
}
